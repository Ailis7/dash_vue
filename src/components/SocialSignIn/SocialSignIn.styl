.SocialSignIn
  text-align: center

  &-Gallery
    display: inline-block

  &-Item
    display: inline-block
    width: 25px
    height: 25px

    background-position: 50% 50%
    background-repeat: no-repeat

    &:not(:first-child)
      margin-left: var(--social-icons-gap)

    &_Social
      &_facebook
        background-image: url('./assets/facebook-black.svg')

      &_googleplus
        background-image: url('./assets/google-plus-black.svg')

      &_instagram
        background-image: url('./assets/instagram-black.svg')
