.ViziCallout
  display: flex
  align-items: center

  position: relative

  width: 100%
  height: var(--callout-size)
  padding: var(--border-width-s)

  margin-top: var(--gap-xxxl)

  border: none
  border-radius: var(--border-radius-m)

  box-shadow: 0px var(--shadow-s-y) var(--shadow-m-radius) var(--shadow-600)

  &-Inner
    display: flex
    align-items: center

    width: 100%
    height: calc(var(--callout-size) - 2 * var(--border-width-s))
    padding-left: var(--gap-l)

    text-align: left

    border-radius: calc(var(--border-radius-m) - var(--border-width-s))

    background: radial-gradient(38% 36% at 70% 28%, var(--color-gray-600) 17%, var(--color-gray-900) 100%)

    .ViziCallout_WithFilledAfter &,
    .ViziCallout_Circle_yes &
      background: linear-gradient(64deg, var(--color-gray-700) 17%, var(--color-black) 110%)

  &_Circle_no
    &:after
      position: absolute
      right: 0
      top: 0
      bottom: 0
      content: ''

      width: var(--callout-arrow-size)

      background-repeat: no-repeat
      background-image: url('./icons/arrow.svg')
      background-position: 50% 50%

  &_Circle_yes
    border-radius: 50%

    margin: 0
    width: var(--callout-arrow-size)
    height: var(--callout-arrow-size)

    .ViziCallout-Inner
      padding: 0
      height: calc(var(--callout-arrow-size) - 2 * var(--border-width-s))

      border-radius: 50%

  &_WithIcon
    &:before
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      content: ''

      background-repeat: no-repeat
      background-position: 50% 50%

  &_Icon
    &_facebook
      &:before
        background-image: url('./icons/social/facebook.svg')

    &_instagram
      &:before
        background-image: url('./icons/social/instagram.svg')

    &_ok
      &:before
        background-image: url('./icons/social/ok.svg')

    &_twitter
      &:before
        background-image: url('./icons/social/twitter.svg')

  &_WithFilledAfter
    padding-right: var(--callout-arrow-size)

    .ViziCallout-Inner
      border-top-right-radius: 0
      border-bottom-right-radius: 0

  &_Theme
    &_beige
      background: #FBCEB5;

    &_blue
      background: linear-gradient(1.13deg, #166BEA -5.05%, #169BE6 94.59%)

    &_green
      background: linear-gradient(180deg, #06DF57 0%, #18AD00 100%);

    &_light-blue
      background: radial-gradient(59.27% 66.56% at 82.67% 3.46%, #53ACFF 15.63%, #5AB0FF 58.85%, #2C54E1 100%)

    &_lime
      background: linear-gradient(124.02deg, #C0FF8B 6.4%, #4DD750 82.15%)

    &_orange
      background: linear-gradient(90deg, #FF9900 0%, #FFDE2E 100%)

    &_peach
      background: linear-gradient(90deg, #FF6363 0%, #FFEE9A 100%)

    &_pink
      background: linear-gradient(180deg, #FD9596 0%, #F7579D 100%)

    &_purple
      background: linear-gradient(292.09deg, #1E00C6 0%, #9025FC 100%)

    &_red
      background: linear-gradient(140.93deg, #FC5A44 9.95%, #C41432 85.55%)

    &_white
      background: linear-gradient(to bottom, var(--color-white), var(--color-gray-400))


  &_WithFilledAfter
    &.ViziCallout
      &_Theme
        &_white,
        &_orange,
        &_peach
          &:after
            background-image: url('./icons/arrow-dark.svg')
